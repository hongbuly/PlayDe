<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/color_background"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:textColor="@color/White"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:srcCompat="@drawable/back_pass" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/top_round_white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용약관동의"
        android:textColor="@color/Black"
        android:layout_marginTop="24.12dp"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="116dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/play_de" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="PLAY-DE에 오신걸 환영합니다.\n약관에 동의하시고 더 가치있는 플레이\nPLAY-DE를 즐겨보세요!"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/Black"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="317dp"
        android:layout_height="41dp"
        android:background="@drawable/back_agree_1_41_color"
        android:gravity="center_vertical"
        android:paddingLeft="38dp"
        android:text="전체 약관 동의"
        android:layout_marginTop="265.24dp"
        android:textStyle="bold"
        android:textColor="@color/SplashTigerOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBox"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="13dp"
        android:button="@android:color/white"
        android:background="@drawable/checkbox_color"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="317dp"
        android:layout_height="175dp"
        android:background="@drawable/back_agree_1_41_black"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:padding="38dp"
        android:layout_marginTop="321.24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="16dp"
        android:textSize="11sp"
        android:text="서비스 이용약관 관련 동의"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)플레이드 이용약관"
        android:textSize="11sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="47dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)개인정보 수집 및 이용 동의"
        android:textSize="11sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="78dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)개인정보 제 3자 제공 동의(인증 이용기관 제공)"
        android:textSize="11sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="109dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택)개인정보 제 3자 제공 동의"
        android:textSize="11sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/checkbox_black"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="13dp"
        android:button="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:button="@android:color/white"
        android:background="@drawable/checkbox_black"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:button="@android:color/white"
        android:background="@drawable/checkbox_black"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />
    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:button="@android:color/white"
        android:background="@drawable/checkbox_black"
        android:layout_marginTop="107dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />
    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="21dp"
        android:button="@android:color/white"
        android:layout_height="21dp"
        android:background="@drawable/checkbox_black"
        android:layout_marginTop="138dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toStartOf="@+id/textView42"
        app:layout_constraintTop_toTopOf="@+id/textView42" />

    <Button
        android:id="@+id/btn_signup_2_next"
        android:layout_width="317dp"
        android:layout_height="41dp"
        android:background="@drawable/loginnext2_edge"
        android:text="다음"
        android:textColor="@color/White"
        android:layout_marginTop="556.24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>