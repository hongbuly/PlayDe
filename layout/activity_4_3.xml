<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/color_background"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페 이름 - 김동훈 사장님"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_black" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/top_round_white"
        tools:layout_editor_absoluteY="70dp"/>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:srcCompat="@drawable/tool_4_1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="김 O O 님"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="350dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/back_gray" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="안녕하세요 안녕하세요 안녕하세요 안녕하세요 안녕하세요"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:paddingVertical="10dp"
            android:textColor="@color/Black"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:background="@drawable/chatme_4_3"/>

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/chatoth_4_3" />
        <TextView
            android:id="@+id/textView37"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="안녕하세요 안녕하세요 안녕하세요 안녕하세요 안녕하세요"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:paddingVertical="10dp"
            android:textColor="@color/Black"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:background="@drawable/chatme_4_3"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>