<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/apple_m"
            android:text="추천 보드게임"
            android:textColor="@color/Black"
            android:textSize="18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/plusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/apple_m"
            android:text="더보기"
            android:textColor="@color/PlusGrey"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/game01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:elevation="5dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/glitch"
                app:shapeAppearanceOverlay="@style/Top_round" />

            <TextView
                android:id="@+id/name01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image01"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/apple_l"
                android:text="Glitch"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/percent01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name01"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/apple_l"
                android:text="100%"
                android:textColor="@color/gradient01"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tag01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name01"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/percent01"
                android:fontFamily="@font/apple_l"
                android:text="#추리#맞추기#심리"
                android:textColor="@color/Black"
                android:textSize="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:elevation="5dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bt"
                app:shapeAppearanceOverlay="@style/Top_round" />

            <TextView
                android:id="@+id/name02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image02"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/apple_l"
                android:text="B.T"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/percent02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name02"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/apple_l"
                android:text="100%"
                android:textColor="@color/gradient01"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tag02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name02"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/percent02"
                android:fontFamily="@font/apple_l"
                android:text="#계산#경제#심리"
                android:textColor="@color/Black"
                android:textSize="8dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/game03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:elevation="5dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/mapping_local"
                app:shapeAppearanceOverlay="@style/Top_round" />

            <TextView
                android:id="@+id/name03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image03"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/apple_l"
                android:text="MAPPING LOCAL"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/percent03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name03"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/apple_l"
                android:text="100%"
                android:textColor="@color/gradient01"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tag03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name03"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/percent03"
                android:fontFamily="@font/apple_l"
                android:text="#계산#맞추기#심리"
                android:textColor="@color/Black"
                android:textSize="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_white"
            android:elevation="5dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/calender_stamp"
                app:shapeAppearanceOverlay="@style/Top_round" />

            <TextView
                android:id="@+id/name04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image04"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/apple_l"
                android:text="CALENDER STAMP"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/percent04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name04"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/apple_l"
                android:text="100%"
                android:textColor="@color/gradient01"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tag04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name04"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/percent04"
                android:fontFamily="@font/apple_l"
                android:text="#추리#맞추기#심리"
                android:textColor="@color/Black"
                android:textSize="8dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:background="@color/LineGrey" />
</LinearLayout>