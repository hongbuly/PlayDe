<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/color_background"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="이메일 아이디 찾기"
        android:textColor="@color/White"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_searchid_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_pass" />

    <LinearLayout
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/top_round_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.92"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증방법을 선택해주세요"
            android:layout_marginLeft="18dp"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbox_searchid_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/checkbox_color"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="18dp"
                android:button="@android:color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원정보에 등록한 전화번호로 인증"
                android:layout_marginLeft="8dp"
                android:textSize="16dp"
                android:textColor="@color/Black"
                android:layout_marginTop="48dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="317dp"
                android:layout_height="41dp"
                android:background="@drawable/login_edge"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="20dp"
                android:layout_marginLeft="55dp"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="317dp"
                    android:layout_height="41dp"
                    android:background="@drawable/login_edge"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="55dp" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="41dp"
                    android:background="@drawable/loginnext2_edge"
                    android:text="인증번호 받기"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:textColor="@color/White"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호 숫자 입력"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:layout_width="317dp"
                android:layout_height="41dp"
                android:background="@drawable/login_edge"
                android:ems="10"
                android:hint = "인증번호 6자리 숫자 입력"
                android:textSize="12sp"
                android:layout_marginLeft="55dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName" />
        </LinearLayout>

        <ImageView
            android:layout_width="378dp"
            android:layout_height="0.6dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back_gray" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbox_searchid_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/checkbox_color"
                android:button="@android:color/white"
                android:layout_marginLeft="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본인확인 이메일로 인증"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/Black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="317dp"
                android:layout_height="41dp"
                android:background="@drawable/login_edge"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="20dp"
                android:layout_marginLeft="55dp"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 주소"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="317dp"
                    android:layout_height="41dp"
                    android:background="@drawable/login_edge"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="55dp" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="41dp"
                    android:background="@drawable/loginnext2_edge"
                    android:text="인증번호 받기"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:textColor="@color/White"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호 숫자 입력"
                android:textColor="@color/Black"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:layout_width="317dp"
                android:layout_height="41dp"
                android:background="@drawable/login_edge"
                android:ems="10"
                android:hint = "인증번호 6자리 숫자 입력"
                android:textSize="12sp"
                android:layout_marginLeft="55dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName" />
        </LinearLayout>



    </LinearLayout>



    <Button
        android:id="@+id/btn_searchid_next"
        android:layout_width="317dp"
        android:layout_height="41dp"
        android:background="@drawable/loginnext2_edge"
        android:text="다음"
        android:layout_marginTop="566dp"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />







</androidx.constraintlayout.widget.ConstraintLayout>