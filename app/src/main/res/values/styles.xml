<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:background">@color/White</item>
        <item name="android:textColorPrimaryInverse">@color/Black</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColorSecondary">@color/SplashTigerOrange</item>
        <item name="android:textColorSecondaryInverse">@color/SplashTigerOrange</item>
        <item name="android:textColorTertiary">@color/Black</item>
        <item name="colorAccent">@color/SplashTigerOrange</item>
    </style>
</resources>