<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_back_white"
        android:orientation="vertical"
        tools:context=".P14_1">

        <EditText
            android:id="@+id/p12_filterEdit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_yellow"
            android:drawableRight="@drawable/reading_glasses"
            android:paddingRight="7dp" />

        <Button
            android:id="@+id/p14_filterButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_btn"
            android:drawableRight="@drawable/down_triangle"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:stateListAnimator="@null"
            android:text="게임 위시리스트 순"
            android:textColor="@color/White"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/p14_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="14"
            android:divider="@color/White"
            android:dividerHeight="5dp"
            android:listSelector="@android:color/transparent" />

    </LinearLayout>

</FrameLayout>