<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_corner_white"
        android:elevation="5dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/round" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cafe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/apple_b"
                android:text="카페 이름"
                android:textColor="@color/Black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cafe_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafe_name"
                android:fontFamily="@font/apple_l"
                android:text="카페 주소"
                android:textColor="@color/Black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/cafe_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafe_address"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/apple_l"
                android:text="테이블 수"
                android:textColor="@color/Black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cafe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafe_table"
                android:fontFamily="@font/apple_l"
                android:text="운영 시간"
                android:textColor="@color/Black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/cafe_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafe_address"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/small_medium_heart"
                android:fontFamily="@font/apple_l"
                android:gravity="center|top"
                android:paddingTop="3dp"
                android:text="35"
                android:textColor="@color/Black"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>