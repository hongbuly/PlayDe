<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <ImageView
        android:layout_width="181dp"
        android:layout_height="170dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/play_de" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/apple_b"
        android:text="당신의 보드게임 가이드"
        android:textColor="@color/MainRed"
        android:textSize="15dp" />

    <Button
        android:id="@+id/mail"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/login_mail" />

    <Button
        android:id="@+id/kakao"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_kakao" />

    <Button
        android:id="@+id/naver"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_naver" />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_corner_red100"
        android:fontFamily="@font/apple_l"
        android:gravity="center"
        android:hint="이메일 아이디"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textSize="15dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_corner_red100"
        android:fontFamily="@font/apple_l"
        android:gravity="center"
        android:hint="비밀번호"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textSize="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="249dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_gradient"
        android:fontFamily="@font/apple_b"
        android:gravity="center"
        android:text="로그인"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/missing_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/apple_l"
            android:text="아이디/비밀번호찾기"
            android:textColor="@color/Black"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apple_l"
            android:text="회원가입"
            android:textColor="@color/Black"
            android:textSize="11dp" />
    </LinearLayout>

    <Button
        android:id="@+id/president"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/president"
        android:textColor="@color/Black" />
</LinearLayout>